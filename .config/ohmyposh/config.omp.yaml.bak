$schema: https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json
version: 4
final_space: true
async: true
blocks:
  - type: prompt
    alignment: left
    segments:
      - type: path
        style: powerline
        powerline_symbol: =>
        template: '  {{ .Path }} '
        foreground: p:text-light
        background: p:git-bg
      - type: git
        style: powerline
        powerline_symbol: =>
        template: '  {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }}  {{ .Working.String }}{{ end }}{{ if and (.Staging.Changed) (.Working.Changed) }} |{{ end }}{{ if .Staging.Changed }}  {{ .Staging.String }}{{ end }} '
        cache:
          duration: 2s
          strategy: session
        foreground: p:text-light
        background: p:git-bg
      - type: project
        style: powerline
        powerline_symbol: =>
        template: '  {{ .Name }}{{ if .Version }} {{ .Version }}{{ end }} '
        foreground: p:text-light
        background: p:git-bg
